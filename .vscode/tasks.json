{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                ""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build and Compile Tests",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-o",
                "build/${fileBasenameNoExtension}",
                "${file}",
                "src/so_long/*.c",
                "test/unity/unity.c",
                "-Itest/unity",
                "-I./src/so_long",
                "-I./src/so_long/libft",
                "-I./src/so_long/ft_printf",
                "-I./src/so_long/minilibx-linux",
                "src/so_long/libft/*.c",
                "src/so_long/ft_printf/*.c",
                "-L./src/so_long/minilibx-linux",
                "-lmlx",
                "-lX11",
                "-lXext",
                "-lXpm",
                "-lbsd"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles the test file and source files with Unity"
        },

    ],
    "version": "2.0.0"
}